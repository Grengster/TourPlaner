<Window x:Class="TourPlaner.PlusButtonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlaner"
        mc:Ignorable="d"
        Title="PlusButtonWindow" Height="450" Width="500" MinHeight="450" MinWidth="500">
    <Window.DataContext>
        <local:PlusButtonViewModel />
    </Window.DataContext>
    <Grid Margin="40,30,40,30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label FontSize="30" Margin="40,30,40,30" Grid.ColumnSpan="2" Grid.RowSpan="2">Hier iwas eintippen</Label>
        <TextBox Grid.Row="1" Margin="40,10,15,40" Grid.ColumnSpan="2" Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Column="0" Margin="40,30,40,30" Grid.Row="2" Content="CACNLEC" IsCancel="True"/>
        <Button Grid.Column="1" Margin="40,30,40,30" Grid.Row="2" Content="ADD THAT SHITE" MinWidth="40" Command="{Binding PlusButtonExecute}"/>
    </Grid>
</Window>

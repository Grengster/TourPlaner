        <StackPanel Grid.ColumnSpan="4" Orientation="Horizontal" Margin="0,37,0,0" Grid.RowSpan="2">
            <TextBlock Grid.Column="0"  Margin="3" VerticalAlignment="Center" Text="Name:"></TextBlock>
            <TextBox Grid.Column="1" Margin="3" Width="650" Height="20" Text="{Binding SearchName, Mode=TwoWay}"></TextBox>
            <Button Grid.Column="4" Content="Clear" Width="50" Height="20" Command="{Binding ClearCommand}"></Button>
            <Button Grid.Column="3" Content="Search" Width="50" Height="20" Command="{Binding SearchCommand}"></Button>
        </StackPanel>
        <DockPanel LastChildFill="True" Grid.RowSpan="2" Margin="0,8,546,0" Grid.Row="2" Grid.ColumnSpan="2">
            <DockPanel LastChildFill="True" DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button Content="Button" Command="{Binding ShowMap}" DockPanel.Dock="Right" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button Content="+" Command="{Binding ExecuteCommand}" DockPanel.Dock="Right" MinWidth="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Button Content="-" Command="{Binding RemoveCommand}" CommandParameter="{Binding CurrentItem.Name}" DockPanel.Dock="Right" MinWidth="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <Label Content="Label" DockPanel.Dock="Right" HorizontalAlignment="Stretch" Grid.Row="1"/>
            </DockPanel>
            <ListBox x:Name="listMediaItems" Grid.Row="1" Grid.Column="3"
                     ItemsSource="{Binding Tours}"
                     SelectedItem="{Binding CurrentItem}"
                     DisplayMemberPath="Name"/>
            <!--<ListView ItemsSource="{Binding Tours}" Name="oops" Grid.Row="2">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
        </DockPanel>

        <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="Person Details" FontSize="15" Margin="0,33,56,0" Grid.RowSpan="2"/>

        <TextBlock Grid.Row="2" Grid.Column="1" Text="Name" Margin="0,50,56,0" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentItem.Name,Mode=TwoWay}" Margin="50,50,56,0" Grid.ColumnSpan="2"/>

        <TextBlock Grid.Row="2" Grid.Column="1" Text="Brand" Margin="0,100,56,0" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentItem._tourInfo.Start, Mode=TwoWay}" Margin="50,100,56,0" Grid.ColumnSpan="2"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Type" Margin="0,150,56,0" Grid.ColumnSpan="2"/>
        <Canvas Grid.Row="3" Grid.Column="1" ClipToBounds="True">
            <Border  Name="border" Grid.ColumnSpan="2">
                <Image Name="image" Source="{Binding CurrentMap}" Opacity="1" RenderTransformOrigin="0.5,0.5"  />
            </Border>
        </Canvas>
